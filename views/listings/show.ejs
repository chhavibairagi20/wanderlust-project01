<% layout("/layouts/boilerplate") -%>

<script>
    const mapToken = "<%= mapToken %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
        <img 
          src="<%= (listing.image && listing.image.url) ? listing.image.url : 'https://via.placeholder.com/1200x800?text=No+Image' %>" 
          class="card-img-top show-img" 
          alt="listing_image"
        >

        <div class="card-body">
            <p class="card-text">
                <i>Owned by <%= listing.owner.username %></i>
            </p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">
                &#8377;
                <%= (listing.price != null && listing.price !== '') 
                    ? Number(listing.price).toLocaleString("en-IN") 
                    : 'N/A' %>/night
            </p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
        </div>
    </div>
</div>

<!-- EDIT / DELETE LISTING (ONLY LISTING OWNER) -->
<% if (currUser && listing.owner._id.equals(currUser._id)) { %>
<div class="btns mt-3">
    <a 
      href="/listings/<%= listing._id %>/edit" 
      class="btn btn-dark offset-3 col-1 edit-btn mb-3">
        Edit
    </a>

    <form 
      method="POST" 
      action="/listings/<%= listing._id %>?_method=DELETE" 
      style="display:inline;">
        <button class="btn btn-dark offset-5 mb-3">
            Delete
        </button>
    </form>
</div>
<% } %>

<div class="col-8 offset-3">

    <!-- ADD REVIEW (ONLY LOGGED-IN USERS) -->
    <% if (currUser) { %>
        <hr>
        <h4>Leave a Review</h4>

        <form 
          action="/listings/<%= listing._id %>/reviews" 
          method="POST" 
          novalidate 
          class="needs-validation">

            <div class="mb-3 mt-3">
                <label class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" name="review[rating]" value="1" />
                    <label>1</label>
                    <input type="radio" name="review[rating]" value="2" />
                    <label>2</label>
                    <input type="radio" name="review[rating]" value="3" />
                    <label>3</label>
                    <input type="radio" name="review[rating]" value="4" />
                    <label>4</label>
                    <input type="radio" name="review[rating]" value="5" checked />
                    <label>5</label>
                </fieldset>
            </div>

            <div class="mb-3 mt-3">
                <label class="form-label">Comments</label>
                <textarea 
                  name="review[comment]" 
                  rows="5" 
                  class="form-control" 
                  required>
                </textarea>
                <div class="invalid-feedback">
                    Please add some comments for review
                </div>
            </div>

            <button class="btn btn-outline-dark mb-3">
                Submit
            </button>
        </form>
    <% } %>

    <!-- ALL REVIEWS -->
    <% if (listing.reviews.length > 0) { %>
        <hr>
        <h4>All Reviews</h4>

        <div class="row">
            <% for (let newReview of listing.reviews) { %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            @<%= newReview.author.username %>
                        </h5>

                        <p 
                          class="starability-result card-text" 
                          data-rating="<%= newReview.rating %>">
                        </p>

                        <p class="card-text">
                            <%= newReview.comment %>
                        </p>
                    </div>

                    <!-- DELETE REVIEW (ONLY REVIEW AUTHOR) -->
                    <% if (
                        currUser &&
                        newReview.author &&
                        newReview.author._id.equals(currUser._id)
                    ) { %>
                        <form 
                          class="mb-3 ms-3" 
                          method="POST"
                          action="/listings/<%= listing._id %>/reviews/<%= newReview._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">
                                Delete
                            </button>
                        </form>
                    <% } %>
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<!-- MAP -->
<div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
</div>

<script src="/js/map.js"></script>
    
